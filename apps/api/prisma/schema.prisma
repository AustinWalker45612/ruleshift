// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum DuelOutcome {
  WIN
  LOSS
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  displayName  String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @default(now())

  // ✅ optional 1:1 link to Player (device identity)
  playerId String? @unique
  player   Player? @relation(fields: [playerId], references: [id], onDelete: SetNull)

  // ✅ Opposite side of DuelResult.user (fixes your P1012 error)
  duelResults DuelResult[]
}

model Player {
  id         String   @id @default(cuid())
  clientId   String   @unique
  name       String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  lastSeenAt DateTime @default(now())

  user User?

  @@index([clientId])
}

model DuelResult {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  duelKey     String
  outcome     DuelOutcome
  scoreEarned Int

  createdAt DateTime @default(now())

  // prevents duplicate inserts if the same duel completion is posted twice
  @@unique([userId, duelKey])
  @@index([userId])
  @@index([createdAt])
}
