generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  displayName  String
  createdAt    DateTime @default(now())

  duelResults DuelResult[] // ✅ required opposite relation
  players     Player[]
}

model Player {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // ✅ device identity (what you currently call clientId)
  clientId String? @unique

  name String

  // If you still want “device stats” keep these;
  // otherwise you can delete them and only use User stats.
  totalXp     Int @default(0)
  duelsPlayed Int @default(0)
  duelsWon    Int @default(0)

  user   User?   @relation(fields: [userId], references: [id])
  userId String?
}

model DuelResult {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  scoreEarned Int
  outcome     String
  duelKey     String
  createdAt   DateTime @default(now())
}
