generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String   @id @default(cuid())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  email        String   @unique
  passwordHash String
  displayName  String

  // ✅ Logged-in stats (what you asked for)
  totalScore   Int      @default(0)
  duelsPlayed  Int      @default(0)
  duelsWon     Int      @default(0)
  duelsLost    Int      @default(0)

  // ✅ optional 1:1 link to Player (device identity)
  playerId     String?  @unique
  player       Player?  @relation(fields: [playerId], references: [id], onDelete: SetNull)
}

model Player {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // ✅ device identity (what you currently call clientId)
  clientId    String?  @unique

  name        String

  // If you still want “device stats” keep these;
  // otherwise you can delete them and only use User stats.
  totalXp     Int      @default(0)
  duelsPlayed Int      @default(0)
  duelsWon    Int      @default(0)

  user        User?
}
