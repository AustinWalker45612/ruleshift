generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  displayName  String
  createdAt    DateTime @default(now())

  // Relations
  duelResults DuelResult[]
  players     Player[]
}

model Player {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // device identity (clientId)
  clientId String? @unique

  name String

  // device stats (optional but kept)
  totalXp     Int @default(0)
  duelsPlayed Int @default(0)
  duelsWon    Int @default(0)

  // Relations
  user   User?   @relation(fields: [userId], references: [id], onDelete: SetNull)
  userId String?
}

model DuelResult {
  id String @id @default(cuid())

  // Relations
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  scoreEarned Int
  outcome     String
  duelKey     String
  createdAt   DateTime @default(now())

  @@unique([duelKey])
  @@index([userId])
}
